{
	"manifest_version": 2,
	"name": "Spam Tester",
	"description": "",
	"version": "1.0.0",
	"author": "Olivier Cartier",
	"applications": {
	"gecko": {
		"id": "spamtester@cestoliv.com",
		"strict_min_version": "78"
	}
	},
	"icons": {
		"64": "img/icon.png"
	},
	"permissions": [
		"compose",
		"storage"
	],
	"compose_action": {
		"default_title": "SpamTest",
		"default_popup": "src/popup.html",
		"default_icon": "img/icon.png",
		"browser_style": true
	},
	"options_ui": {
		"page": "src/options.html",
		"open_in_tab": false,
		"browser_style": true
	}
}
