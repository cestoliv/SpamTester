{
	"manifest_version": 2,
	"name": "Spam Tester",
	"description": "",
	"version": "1.0.1",
	"author": "Olivier Cartier",
	"homepage_url": "https://git.chevro.fr/cestoliv/spamtester",
	"applications": {
		"gecko": {
			"id": "spamtester@cestoliv.com",
			"strict_min_version": "78.0"
		}
	},
	"icons": {
		"64": "img/logo.png"
	},
	"permissions": [
		"compose",
		"storage"
	],
	"compose_action": {
		"default_title": "SpamTest",
		"default_popup": "src/popup.html",
		"default_icon": "img/logo.png",
		"browser_style": true
	},
	"options_ui": {
		"page": "src/options.html",
		"open_in_tab": false,
		"browser_style": true
	}
}
